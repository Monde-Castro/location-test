          <section id="add" class="container" style="margin-top: 50px;">
            <div class="form-wrap">
                <form action="/posts" method="post" enctype="multipart/form-data" class="container">
                    <h4>New Post </h4>
                <div class="input-group">
                        <input type="text" name="post[title]" class="input-box review--comment" placeholder="Title">
                </div>
                <div class="input-group">
                        <input type="text" name="post[price]" step=".01"  class="input-box review--comment"  placeholder="Price" value="R ">
                </div>
                <div class="input-group">
                        <input type="text" name="post[PhoneNo]" step=".01"  class="input-box review--comment"  placeholder="PhoneNo">
                </div>
                <div class=" file-field">
                            <div class="btn blue lighten-1">
                                    <span>Image</span>
                                    <input type="file" multiple accept="images/*" id="image" name="images" >
                                </div>
                                <div class="file-path-wrapper">
                                    <input type="text" class="file-path validate review--comment" accept="images/*" placeholder="Choose files: must be 4">
                                </div>
                    </div> 
                                   
                <div class="input-group">
                    <input type="text" name="post[shortdescription]" class="input-box review--comment" placeholder="Shortdescription">
                </div>
                <div class="input-group">
                    <textarea  name="post[description]" placeholder="Description"  class="input-box" rows="50"></textarea>
                </div>
                <div class="input-group">
                        <input type="text" name="post[location]" class="input-box review--comment" placeholder="Location">
                </div>
                <input type="submit" value="Submit" class="btn green ">
              </form>
            </div>
          </section>

