          <section id="add" class="container" style="margin-top: 50px; margin-bottom: 50px;">
                <div class="form-wrap container">
                        <h4>
                                <img src="<%= currentUser.image.secure_url %>" class="respondsive-img circle" alt="<%= currentUser.username %>'s profile image" >
                                <br>
                                <%= currentUser.username %>'s Profile
                            </h4>
                            <hr>
                    <h5>Update Information:</h5>
                  <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="input-group">
                            <label for="username"><i class="fa fa-user fa-2x" aria-hidden="true" style="padding: 5px;"></i>Username:</label>
                            <input type="text" id="username" name="username" class="input-box  review--comment" placeholder="username" value="<%= currentUser.username %>" autofocus required>
                            
                        </div>
                    <div class="input-group">
                            <label for="current-password"><i class="fa fa-lock fa-2x" aria-hidden="true" style="padding: 5px;"></i></i>Current Password (required to update profile):</label>
                            <input type="password" id="current-password" class="input-box  review--comment"   name="currentPassword" placeholder="current password"  required>
                            
                        </div>
                    <div class="input-group">
                            <label for="new-password"><i class="fa fa-lock fa-2x" aria-hidden="true"  style="padding: 5px;"></i></i>New Password:</label>
                            <input type="password" id="new-password" class="input-box  review--comment" name="newPassword" placeholder="new password" >
                            
                        </div>
                    <div class="input-group">
                            <label for="password-confirmation"><i class="fa fa-lock fa-2x" aria-hidden="true" style="padding: 5px;"></i></i>Password Confirmation:</label>
                            <input type="password" id="password-confirmation" class="input-box  review--comment" name="passwordConfirmation" placeholder="password confirmation" >
                            
                        </div>
                    <div id="validation-message"></div>
                    <div class="input-group">
                            <label for="email"><i class="fa fa-envelope-o fa-2x" aria-hidden="true" style="padding: 5px;"></i></i>Email:</label>
                            <input type="email" id="email" class="input-box  review--comment"  name="email" placeholder="email" value="<%= currentUser.email %>"  >
                            
                        </div>
                    <div class=" file-field">
                        <div class="btn blue">
                            <span>Image</span>
                            <input type="file" multiple>
                        </div>
                        <div class="file-path-wrapper">
                            <input type="text" class="file-path validate review--comment" accept="images/*" placeholder="Upload Profile Image">
                        </div>
                    </div>
                    <input type="submit" value="Submit" class="btn green lighten-1">
                  </form>
                </div>
              </section>
        
