<% layout('layouts/boilerplate') -%>


<section id="add" class="container">
        <div class="form-wrap">
                <h1>
                        <img src="<%= currentUser.image.secure_url %>" class="profile-image" alt="<%= currentUser.username %>'s profile image" >
                        <br>
                        <%= currentUser.username %>'s Profile
                    </h1>
                    <hr>
            <h2>Update Information:</h2>
          <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="input-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" class="input-box" placeholder="username" value="<%= currentUser.username %>" autofocus required>
                    <i class="fa fa-user fa-2x" aria-hidden="true"></i>
                </div>
            <div class="input-group">
                    <label for="current-password">Current Password (required to update profile):</label>
                    <input type="password" id="current-password" class="input-box"   name="currentPassword" placeholder="current password"  required>
                    <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
                </div>
            <div class="input-group">
                    <label for="new-password">New Password:</label>
                    <input type="password" id="new-password" class="input-box" name="newPassword" placeholder="new password" >
                    <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
                </div>
            <div class="input-group">
                    <label for="password-confirmation">Password Confirmation:</label>
                    <input type="password" id="password-confirmation" class="input-box" name="passwordConfirmation" placeholder="password confirmation" >
                    <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
                </div>
            <div id="validation-message"></div>
            <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="input-box"  name="email" placeholder="email" value="<%= currentUser.email %>"  >
                    <i class="fa fa-envelope-o fa-2x" aria-hidden="true"></i>
                </div>
            <div class="input-group">
                    
                    
                    <div class=" dropfileForm " >
                            <div>
                                <br>
                                

                                    <lable for="file" class="fileLabel">
                                            <input type="file" id="file"  class="fileLabel" accept="images/*" name="iamge" multiple >
                                        <span class="fileInfro">Upload Profile-image: <br> (this deletes existing)</span>     
                                    </lable>
                            </div>
                            
            </div>
            <input type="submit" value="Submit" class="btn btn-reverse">
          </form>
        </div>
      </section>


<script src="/javascripts/profile.js"></script>

<% include ./partials/footer -%>